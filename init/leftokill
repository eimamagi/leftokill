#!/bin/bash
# leftokill daemon
# chkconfig: 345 20 80
# description: leftokill daemon
# processname: leftokilld 

. /etc/rc.d/init.d/functions
PROG_NAME="leftokilld"
DAEMON_PATH="/usr/bin/leftokilld"
NN="$(which tr) '\n' '\0'"

case "$1" in
start)
	echo -n $"Starting $PROG_NAME: "
	daemon $DAEMON_PATH -d start | eval $NN
	echo
;;
stop)
	echo -n $"Stopping $PROG_NAME: "
	daemon $DAEMON_PATH -d stop | eval $NN
	echo
;;
restart)
	echo -n $"Restarting $PROG_NAME: "
	daemon $DAEMON_PATH -d restart | eval $NN
	echo
;;
status)
	echo -n $"Status $PROG_NAME: "
	daemon $DAEMON_PATH -d status | eval $NN
	echo
;;
*)
	echo "Usage: $0 {start|stop|restart|status}"
	exit 1
esac

